@page
@model BulkyWebRazor.Pages.Categories.IndexModel


<h2>Category List</h2>

    @* <partial name="_Notification" /> *@

    <div class="container">
        <div class="row pt-4 pb-2">
        <div class="col-6">
        <h2 class="text-primary">
        Category List
        </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Category</a>

                </div>
            </div>

    <table class="table table-bordered table-striped">
    <thead>
    <tr>
                
                <th>Name</th>
                <th>Display Order</th>
                <th style="text-align:center">Action</th>

    
    
    </tr>
    
    </thead>
    <tbody>
            @foreach(var obj in Model.CategoryList)
            {
                <tr>
                    
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    


                    <td>
                    <div class="w-75 btn-group" role="group">
                                <a asp-page="/categories/Edit" asp-route-id="@obj.Id"  class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                                <a asp-page="/categories/Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                    </div>
                    </td>
                
                </tr>
           

            }
    </tbody>
    </table>

    </div>


    



